<?xml version="1.0" encoding="utf-8"?>

<!--https://materialdesignicons.com/-->

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cv.com.bluetoothremote.Activities.MediaActivity" tools:layout_editor_absoluteY="25dp"
        tools:layout_editor_absoluteX="0dp">

    <android.support.v7.widget.AppCompatImageButton
            android:layout_width="120dp"
            android:layout_height="0dp" app:srcCompat="@drawable/play_pause"
            android:id="@+id/play_pause"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            tools:layout_constraintTop_creator="1" tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="@+id/stop" tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="@+id/stop"
            app:layout_constraintVertical_bias="0.0"/>
    <android.support.v7.widget.AppCompatImageButton
            android:layout_width="120dp"
            android:layout_height="60dp" app:srcCompat="@drawable/skip_next" android:id="@+id/next"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toRightOf="@+id/stop"
            android:layout_marginLeft="107dp"
            android:layout_marginTop="107dp"
            app:layout_constraintHorizontal_bias="0.209"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="106dp"
            app:layout_constraintBottom_toTopOf="@+id/exit" tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1" android:layout_marginStart="5dp"/>
    <android.support.v7.widget.AppCompatImageButton
            android:layout_width="120dp"
            android:layout_height="60dp" app:srcCompat="@drawable/skip_previous"
            android:id="@+id/prev"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginLeft="18dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toLeftOf="@+id/play_pause"
            android:layout_marginRight="22dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="107dp"
            app:layout_constraintHorizontal_bias="0.44" android:layout_marginBottom="106dp"
            app:layout_constraintBottom_toTopOf="@+id/exit" tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1" tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"/>
    <android.support.v7.widget.AppCompatImageButton
            android:layout_width="120dp"
            android:layout_height="60dp" app:srcCompat="@drawable/stop" android:id="@+id/stop"
            android:layout_marginStart="5dp"
            app:layout_constraintLeft_toRightOf="@+id/play_pause"
            android:layout_marginLeft="5dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="107dp"
            android:layout_marginBottom="106dp" app:layout_constraintBottom_toTopOf="@+id/exit"
            tools:layout_constraintTop_creator="1" tools:layout_constraintBottom_creator="1"/>
    <android.support.v7.widget.AppCompatImageButton
            android:layout_width="120dp"
            android:layout_height="60dp" app:srcCompat="@drawable/volume_plus" android:id="@+id/vol_up"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp" android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toTopOf="@+id/play_pause" android:layout_marginLeft="5dp"
            app:layout_constraintVertical_bias="0.523" app:layout_constraintLeft_toLeftOf="@+id/play_pause"
            app:layout_constraintRight_toRightOf="@+id/play_pause" tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1" android:layout_marginStart="5dp"/>
    <android.support.v7.widget.AppCompatImageButton
            android:layout_width="0dp"
            android:layout_height="60dp" app:srcCompat="@drawable/volume_minus" android:id="@+id/vol_down"
            android:layout_marginBottom="23dp" android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/play_pause"
            app:layout_constraintBottom_toTopOf="@+id/exit"
            app:layout_constraintLeft_toLeftOf="@+id/play_pause"
            app:layout_constraintRight_toRightOf="@+id/play_pause" app:layout_constraintHorizontal_bias="1.0"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1" tools:layout_constraintLeft_creator="1"/>
    <android.support.v7.widget.AppCompatImageButton
            android:layout_width="200dp"
            android:layout_height="70dp" app:srcCompat="@drawable/close"
            android:id="@+id/exit"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="47dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:layout_marginLeft="47dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="50dp"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintHorizontal_bias="0.952"/>
</android.support.constraint.ConstraintLayout>
