<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cv.com.bluetoothremote.Activities.BluetoothActivity">

    <Button
            android:text="Connect"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/connectButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginBottom="58dp"/>
    <Button
            android:text="Start"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/startButton" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/stopButton" app:layout_constraintTop_toTopOf="parent"
    />

    <Button
            android:text="Stop"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/stopButton" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/connectButton"
            app:layout_constraintTop_toBottomOf="@+id/startButton"
            app:layout_constraintVertical_bias="0.409"/>

</android.support.constraint.ConstraintLayout>
